        .item 6
        .item 7
        .item 8
        .item 9

      .display-code
        pre
          code.language-css
            | .justify-items {
            |   grid-template-columns: repeat(3, 1fr);
            |   justify-items: end; /* stretch | start | end | center */
            | }

    .grid.grid-positioning.align-items
    
      .display-grid
        .item 1
        .item 2
        .item 3
        .item 4
        .item 5
        .item 6
        .item 7
        .item 8
        .item 9

      .display-code
        pre
          code.language-css
            | .align-items {
            |   grid-template-columns: repeat(3, 1fr);
            |   grid-template-rows: repeat(3, 70px);
            |   align-items: end; /* stretch | start | end | center */
            | }
            |
            | /* Shorthand for justify &amp; align items */
            | /* place-items: align-items justify-items */

