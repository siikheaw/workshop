section.wrapper

  .container
    h2.title.container-title Basic
    p.subtitle grid-template
  
    .grid.grid-basic
    
      .display-grid
        .item 1
        .item 2
        .item 3
        .item 4
        .item 5
        .item 6
        .item 7
        .item 8
        .item 9

      .display-code
        pre
          code.language-css
            | display: grid;
            | /* Can be any units - px | em | rem | fr | auto */
            | grid-template-columns: 70px 25% auto;
            | grid-template-rows: 50px 30% auto;
            | grid-gap: 15px;

  .container
    h2.title.container-title Template Areas
    p.subtitle grid-template-areas | grid-area
  
    .grid.grid-template-areas
    
      .display-grid
        .item.header Header
        .item.main  Main
        .item.sidebar Sidebar
        .item.footer Footer

      .display-code
        pre
          code.language-css
            | .grid-template-areas {
            |    grid-template-columns: repeat(4, 1fr);
            |    /* . = empty area */
            |    grid-template-areas: 
            |      'header header  header  header'
            |      'main   main   .       sidebar'
            |      'footer footer  footer  footer'
            |  }

            |  .header { grid-area: header; }
            |  .main { grid-area: main; }
            |  .sidebar { grid-area: sidebar; }
            |  .footer { grid-area: footer; }

  .container
    h2.title.container-title Positioning Items
    p.subtitle justify-items | align-items
  
    .grid.grid-positioning.justify-items
    
