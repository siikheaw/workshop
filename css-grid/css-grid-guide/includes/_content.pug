            |   grid-template-columns: repeat(3, 1fr);     
            |   grid-auto-rows: 50px;
            | }

  .container
    h2.title.container-title Placing &amp; Sizing Grid Items
    p.subtitle track-start / track-end
  
    .grid.grid-sizing
    
      .display-grid
        .item.item-a A
        .item.item-b B
        .item.item-c C

      .display-code
        pre
          code.language-css
            | .grid-sizing {
            |   grid-template-columns: repeat(4, 1fr);
            |   grid-template-rows: repeat(3, 50px);
            | }

            | .item-a { grid-column: 2 / 3; }
            | .item-b { grid-column: 3 / 5; grid-row: 2 / 3; }
            | .item-c { grid-column: 1 / 2; grid-row: 2/ 4; }

